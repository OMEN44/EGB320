layout cwd="~/perseus-v2" {
    pane split_direction="vertical" {
        pane split_direction="horizontal" {
            pane command="yarn" {
                cwd "~/perseus-v2/software/web_ui"
                args "dev"
            }
            pane {
                cwd "~/EGB320"
            }
        }
        pane split_direction="horizontal" {
            pane split_direction="vertical" {
                pane command="yarn" {
                    cwd "~/perseus-v2/software/web_ui"
                    args "camera-online"
                }
                pane {
                    cwd "~/perseus-v2"
                }
            }
            pane split_direction="vertical" {
                pane {
                    cwd "~/EGB320"
                }
                pane {
                    cwd "~/EGB320"
                }
            }
        }
    }
}

